rules_version = '2';

// Firebase Storage Security Rules for Australia Trip Scheduler
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to validate file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Helper function to validate file type
    function isValidFileType() {
      return request.resource.contentType.matches('image/.*')
          || request.resource.contentType.matches('application/pdf')
          || request.resource.contentType.matches('application/msword')
          || request.resource.contentType.matches('application/vnd.*')
          || request.resource.contentType.matches('text/plain');
    }
    
    // User-specific files: users/{userId}/places/{placeId}/{filename}
    match /users/{userId}/places/{placeId}/{filename} {
      // Allow read if user is authenticated and owns the file
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Allow write (create/update) if user is authenticated, owns the file,
      // file size is valid, and file type is allowed
      allow create, update: if isAuthenticated() 
                            && isOwner(userId)
                            && isValidSize()
                            && isValidFileType();
      
      // Allow delete if user is authenticated and owns the file
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
